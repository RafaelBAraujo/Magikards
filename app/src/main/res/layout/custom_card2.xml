<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_gravity="center_vertical|center_horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/newStickerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/stickerBorderImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/newStickerImage"
                android:layout_alignBottom="@id/newStickerImage"
                android:layout_alignLeft="@id/newStickerImage"
                android:layout_alignRight="@id/newStickerImage"
                android:src="@drawable/stickers_border"
                android:scaleType="fitXY" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>